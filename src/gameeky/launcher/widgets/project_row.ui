<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.16.0 -->
<interface>
  <!-- interface-name project_row.ui -->
  <requires lib="gtk" version="4.12"/>
  <template class="ProjectRow" parent="GtkFlowBoxChild">
    <property name="child">
      <object class="GtkBox">
        <child>
          <object class="GtkOverlay">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <child type="overlay">
              <object class="GtkBox">
                <property name="hexpand">True</property>
                <property name="orientation">vertical</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkBox">
                    <property name="hexpand">True</property>
                    <property name="vexpand">True</property>
                    <child>
                      <object class="GtkImage">
                        <property name="hexpand">True</property>
                        <property name="vexpand">True</property>
                        <style>
                          <class name="thumbnail"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkLabel" id="title">
                        <property name="ellipsize">end</property>
                        <property name="label">Title</property>
                        <property name="lines">1</property>
                        <property name="xalign">0.0</property>
                        <style>
                          <class name="title-4"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="subtitle">
                        <property name="ellipsize">end</property>
                        <property name="label">Description</property>
                        <property name="lines">1</property>
                        <property name="xalign">0.0</property>
                        <property name="yalign">0.0</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                    <style>
                      <class name="labels"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child type="overlay">
              <object class="GtkBox">
                <property name="halign">end</property>
                <property name="hexpand">True</property>
                <property name="spacing">5</property>
                <property name="valign">start</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkButton" id="options">
                    <property name="halign">center</property>
                    <property name="icon-name">view-more-horizontal-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Options</property>
                    <property name="valign">center</property>
                    <signal name="clicked" handler="on_options_clicked"/>
                    <style>
                      <class name="circular"/>
                    </style>
                  </object>
                </child>
                <style>
                  <class name="buttons"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    <property name="halign">center</property>
    <property name="height-request">200</property>
    <property name="valign">start</property>
    <property name="width-request">250</property>
    <style>
      <class name="card"/>
    </style>
  </template>
</interface>
