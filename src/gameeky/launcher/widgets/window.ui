<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.17.0 -->
<interface>
  <!-- interface-name window.ui -->
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="Window" parent="AdwApplicationWindow">
    <property name="default-height">600</property>
    <property name="default-width">800</property>
    <child>
      <object class="AdwToolbarView">
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwBanner" id="banner">
                <property name="button-label">Reload</property>
                <property name="title">The projects have been changed on disk</property>
                <signal name="button-clicked" handler="on_reload_clicked"/>
              </object>
            </child>
            <child>
              <object class="GtkStack" id="stack">
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkScrolledWindow">
                        <property name="child">
                          <object class="GtkBox">
                            <property name="halign">center</property>
                            <property name="hexpand">True</property>
                            <property name="orientation">vertical</property>
                            <property name="valign">center</property>
                            <property name="vexpand">True</property>
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">dev.tchx84.Gameeky</property>
                                <property name="margin-bottom">25</property>
                                <property name="pixel-size">128</property>
                                <style>
                                  <class name="icon-dropshadow"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Welcome to Gameeky</property>
                                <property name="margin-bottom">25</property>
                                <style>
                                  <class name="title-1"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton">
                                <property name="action-name">app.new</property>
                                <property name="halign">center</property>
                                <property name="label" translatable="yes">Create</property>
                                <property name="name">create</property>
                                <style>
                                  <class name="pill"/>
                                  <class name="suggested-action"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </property>
                        <property name="hexpand">True</property>
                        <property name="vexpand">True</property>
                      </object>
                    </property>
                    <property name="name">landing</property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkScrolledWindow">
                        <property name="child">
                          <object class="AdwClamp">
                            <property name="child">
                              <object class="GtkBox">
                                <property name="halign">center</property>
                                <property name="hexpand">True</property>
                                <property name="orientation">vertical</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label" translatable="yes">My Projects</property>
                                    <style>
                                      <class name="title-1"/>
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkFlowBox" id="content">
                                    <property name="halign">center</property>
                                    <property name="hexpand">True</property>
                                    <property name="homogeneous">True</property>
                                    <property name="max-children-per-line">3</property>
                                    <property name="min-children-per-line">1</property>
                                    <property name="selection-mode">none</property>
                                    <property name="valign">start</property>
                                  </object>
                                </child>
                              </object>
                            </property>
                            <property name="maximum-size">800</property>
                          </object>
                        </property>
                        <style>
                          <class name="projects"/>
                        </style>
                      </object>
                    </property>
                    <property name="name">projects</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwWindowTitle"/>
            </property>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="popover">popover</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="menu">
    <item>
      <attribute name="action">app.new</attribute>
      <attribute name="label" translatable="yes">_New</attribute>
    </item>
    <item>
      <attribute name="action">app.documentation</attribute>
      <attribute name="label" translatable="yes">_Documentation</attribute>
    </item>
    <item>
      <attribute name="action">app.about</attribute>
      <attribute name="label" translatable="yes">_About Gameeky</attribute>
    </item>
  </menu>
  <object class="GtkPopoverMenu" id="popover">
    <property name="menu-model">menu</property>
  </object>
</interface>
